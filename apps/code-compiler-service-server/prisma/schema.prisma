datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Submission {
  code       String?
  createdAt  DateTime              @default(now())
  id         String                @id @default(cuid())
  input      String?
  language   Language?             @relation(fields: [languageId], references: [id])
  languageId String?
  results    Result[]
  status     EnumSubmissionStatus?
  updatedAt  DateTime              @updatedAt
  user       User?                 @relation(fields: [userId], references: [id])
  userId     String?
}

model Result {
  createdAt     DateTime    @default(now())
  errorField    String?
  executionTime Float?
  id            String      @id @default(cuid())
  output        String?
  submission    Submission? @relation(fields: [submissionId], references: [id])
  submissionId  String?
  updatedAt     DateTime    @updatedAt
}

model Language {
  createdAt   DateTime     @default(now())
  id          String       @id @default(cuid())
  isActive    Boolean?
  name        String?
  submissions Submission[]
  updatedAt   DateTime     @updatedAt
  version     String?
}

model User {
  createdAt   DateTime     @default(now())
  email       String?      @unique
  firstName   String?
  id          String       @id @default(cuid())
  lastName    String?
  password    String
  roles       Json
  submissions Submission[]
  updatedAt   DateTime     @updatedAt
  username    String       @unique
}

enum EnumSubmissionStatus {
  Option1
}
